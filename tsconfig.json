{
  "compilerOptions": {
    "types": ["@fastly/js-compute"],
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2022",
      "dom",
      "ESNext",
      "WebWorker",
      "DOM",
      "Webworker.Iterable"
    ],
    "rootDir": "src",
    "outDir": "build",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
